@page
@model TrafficCrash.Pages.SearchPeopleandVehicleModel
@{
    ViewData["Title"] = "SearchPeopleandVehicle";
    var allVehicles = (TrafficCrashVehicles.TrafficCrashVehicle[])ViewData["allVehicles"];
    var allPeople = (TrafficCrashPeoples.TrafficCrashPeople[])ViewData["allPeople"];
}

    <body style="background-color: lightgrey">
        <h1>Vehicle and People Details</h1>


        <form action="" method="POST">
            <div class="form-group">
                <label class="control-label" for="search">Enter RD No.</label>
                <input list="" class="form-control" name="search" id="search" style="width:50%" />
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>


        @if (Model.SearchCompleted == true)
        {
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <nav>
                            <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
                                <a class="nav-item nav-link active" id="VehicleDetailsTab" data-toggle="tab" href="#VehicleDetails" role="tab" aria-controls="nav-home" aria-selected="true">Vehicle Details</a>
                                <a class="nav-item nav-link" id="PeopleDetailsTab" data-toggle="tab" href="#PeopleDetails" role="tab" aria-controls="nav-profile" aria-selected="false">People Details</a>
                            </div>
                        </nav>
                        <div class="tab-content" id="nav-tabContent">
                            <div class="tab-pane fade show active" id="VehicleDetails" role="tabpanel" aria-labelledby="VehicleDetailsTab">
                                <table class="table table-bordered table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>CrashUnitId</th>
                                            <th>RdNo</th>
                                            <th>CrashDate</th>
                                            <th>VehicleId</th>
                                            <th>Model</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (allVehicles.Count() > 0)
                                        {
                                            @foreach (TrafficCrashVehicles.TrafficCrashVehicle trafficCrash in allVehicles)
                                            {
                                                <tr>
                                                    <td>@trafficCrash.CrashUnitId</td>
                                                    <td>@trafficCrash.RdNo</td>
                                                    <td>@trafficCrash.CrashDate</td>
                                                    <td>@trafficCrash.VehicleId</td>
                                                    <td>@trafficCrash.Model</td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr class="danger">
                                                <td colspan="6" class="text-center">
                                                    No results found for term "@Model.Search"
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div class="tab-pane fade" id="PeopleDetails" role="tabpanel" aria-labelledby="fireAccidentsTab">
                                <table class="table table-bordered table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>PersonId</th>
                                            <th>PersonType</th>
                                            <th>RdNo</th>
                                            <th>VehicleId</th>
                                            <th>CrashDate</th>
                                            <th>Sex</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (allPeople.Count() > 0)
                                        {
                                            @foreach (TrafficCrashPeoples.TrafficCrashPeople peopleDetails in allPeople)
                                            {
                                                <tr>
                                                    <td>@peopleDetails.PersonId</td>
                                                    <td>@peopleDetails.PersonType</td>
                                                    <td>@peopleDetails.RdNo</td>
                                                    <td>@peopleDetails.VehicleId</td>
                                                    <td>@peopleDetails.CrashDate</td>
                                                    <td>@peopleDetails.Sex</td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr class="danger">
                                                <td colspan="6" class="text-center">
                                                    No results found for term "@Model.Search"
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </body>

